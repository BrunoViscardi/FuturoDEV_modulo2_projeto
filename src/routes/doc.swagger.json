{
  "swagger": "2.0",
  "info": {
    "title": "Exercita365",
    "description": "O Exercita365 é uma plataforma que facilita o gerenciamento de exercícios e locais para atividades físicas serem praticadas. Os usuários podem cadastrar novos locais de exercícios, encontrar pontos próximos, visualizar informações sobre os exercícios em cada ponto e registrar suas próprias contribuições para o sistema.",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "Bearer <token>"
    }
  },
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Usuário"
        ],
        "description": "Endpoint para realizar login no sistema",
        "parameters": [
          {
            "name": "novoLogin",
            "in": "body",
            "description": "Informações do login",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "teste@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "senha123"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/usuario/": {
      "post": {
        "tags": [
          "Usuário"
        ],
        "description": "Endpoint para criar uma conta de usuário",
        "parameters": [
          {
            "name": "novoUsuario",
            "in": "body",
            "description": "Informações do usuario",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "usuarioTeste"
                },
                "email": {
                  "type": "string",
                  "example": "teste@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "senha123"
                },
                "cpf": {
                  "type": "string",
                  "example": "123.456.789-11"
                },
                "sexo": {
                  "type": "string",
                  "example": "outro"
                },
                "data_nascimento": {
                  "type": "string",
                  "example": "02/28/1921"
                },
                "endereco": {
                  "type": "object",
                  "properties": {
                    "logradouro": {
                      "type": "string",
                      "example": "Rua A"
                    },
                    "numero": {
                      "type": "string",
                      "example": "123"
                    },
                    "complemento": {
                      "type": "string",
                      "example": "Apto 1"
                    },
                    "bairro": {
                      "type": "string",
                      "example": "Alfeneiros"
                    },
                    "cidade": {
                      "type": "string",
                      "example": "Florianópolis"
                    },
                    "estado": {
                      "type": "string",
                      "example": "SC"
                    },
                    "cep": {
                      "type": "string",
                      "example": "88888-123"
                    }
                  },
                  "required": [
                    "logradouro",
                    "numero",
                    "bairro",
                    "cidade",
                    "estado",
                    "cep"
                  ]
                }
              },
              "required": [
                "nome",
                "email",
                "password",
                "cpf",
                "endereco"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/local/": {
      "post": {
        "tags": [
          "Locais de Treino"
        ],
        "description": "Endpoint para cadastrar local de treino",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "novoLocal",
            "in": "body",
            "description": "Informações do local de treino",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Álvaro Arquearia RT"
                },
                "pratica_esportiva": {
                  "type": "string",
                  "example": "Arco e flecha"
                },
                "descricao": {
                  "type": "string",
                  "example": "Local de treino"
                },
                "localidade": {
                  "type": "string",
                  "example": "Sul da ilha de Florianópolis"
                },
                "latitude": {
                  "type": "string",
                  "example": "-43.21046"
                },
                "longitude": {
                  "type": "string",
                  "example": "-47.21046"
                }
              },
              "required": [
                "nome",
                "pratica_esportiva",
                "localidade",
                "latitude",
                "longitude"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Locais de Treino"
        ],
        "description": "Endpoint para listar todos os locais de treino do usuário",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/local/{local_id}": {
      "get": {
        "tags": [
          "Locais de Treino"
        ],
        "description": "Endpoint para listar um local de treino específico",
        "parameters": [
          {
            "name": "local_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID do local de treino"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Locais de Treino"
        ],
        "description": "Endpoint para deletar um local de treino específico",
        "parameters": [
          {
            "name": "local_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID do local de treino"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Locais de Treino"
        ],
        "description": "Endpoint para atualizar um local de treino específico",
        "parameters": [
          {
            "name": "local_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID do local de treino"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Dados para atualizar o local de treino",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Álvaro Arquearia RT"
                },
                "pratica_esportiva": {
                  "type": "string",
                  "example": "Tiro ao Alvo"
                },
                "descricao": {
                  "type": "string",
                  "example": "Local de treino"
                },
                "localidade": {
                  "type": "string",
                  "example": "Sul da ilha de Florianópolis"
                },
                "latitude": {
                  "type": "string",
                  "example": "-43.21046"
                },
                "longitude": {
                  "type": "string",
                  "example": "47.21046"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ]
}